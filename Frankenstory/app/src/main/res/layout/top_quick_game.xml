<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="28dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            tools:ignore="MissingConstraints">

            <!---Indicador nombre de usuario-->
            <TextView
                android:id="@+id/usernameTop"
                android:layout_width="120dp"
                android:backgroundTint="@color/verde_top"
                android:layout_height="match_parent"
                android:background="@drawable/indicator"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:text="@string/no_name"
                android:fontFamily="@font/arial_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:gravity="center" />
            <!---Icono persona-->
        <ImageView
            android:id="@+id/iconUser"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="-241dp"
            android:src="@drawable/man" />

            <!---Indicador monedas-->
            <TextView
                android:id="@+id/coinsTop"
                android:layout_width="90dp"
                android:layout_height="match_parent"
                android:backgroundTint="@color/verde_letras"
                android:text="@string/no_points"
                android:paddingEnd="5dp"
                android:gravity="right|center_vertical"
                android:background="@drawable/indicator"
                android:fontFamily="@font/arial_bold"
                android:textSize="15sp"
                android:textColor="@color/white"
                android:layout_toRightOf="@+id/usernameTop" />

            <!---Icono mooncoin-->
            <ImageView
                android:id="@+id/iconmooncoin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/usernameTop"
                android:layout_marginLeft="-45dp"
                android:src="@drawable/mooncoin2"/>

        </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
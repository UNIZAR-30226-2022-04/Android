<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/layoutmain">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <!---Parte superior-->
            <include layout="@layout/top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="50dp">
                <!--Texto Relato-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="1"
                    android:text="@string/story"
                    android:textColor="@color/white"
                    android:textSize="35sp" />
                <!---Boton crear relato-->
                <Button
                    android:id="@+id/create_story"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/create_sotry"
                    android:textColor="@color/white"
                    android:textSize="27sp"
                    android:background="@drawable/button" />
                <!--Texto mis partidas-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="1"
                    android:text="@string/my_games"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <!--Lista mis partidas-->
                <ListView
                    android:id="@+id/my_stories"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <!--Texto partidas de amigos-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="1"
                    android:text="@string/friend_games"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <!--Lista partidas de amigos-->
                <ListView
                    android:id="@+id/friends_games"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
                <!--Texto partidas públicas-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="1"
                    android:text="@string/public_games"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <!--Lista partidas públicas-->
                <ListView
                    android:id="@+id/public_games"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"/>
                <!--Texto partidas públicas-->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="1"
                    android:text="@string/no_voted"
                    android:textColor="@color/white"
                    android:textSize="25sp" />
                <!--Lista partidas públicas-->
                <ListView
                    android:id="@+id/noVoted_games"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </LinearLayout>
            <!---Parte inferior-->
            <include
                layout="@layout/bottom_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

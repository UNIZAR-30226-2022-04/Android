<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/indicator"
        android:backgroundTint="@color/verde_letras"
        android:layout_marginLeft="12dp">
        <!-- COMPRAR PUÑETAS -->
        <TextView
            android:id="@+id/textPunetas"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:fontFamily="@font/arial_bold"
            android:gravity="center_vertical"
            android:paddingLeft="18dp"
            android:text="Comprar puñetas"
            android:textColor="@color/white"
            android:textSize="15sp"/>
        <!-- LETRAS AL REVÉS -->
        <LinearLayout
            android:id="@+id/letras_reves"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/indicator"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/letras_reves"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Letras al revés"
                    android:fontFamily="@font/bangers_regular"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="150"
                        android:fontFamily="@font/bangers_regular"
                        android:textColor="@color/amarillo_oscuro"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mooncoin2"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- ESCRIBE A CIEGAS -->
        <LinearLayout
            android:id="@+id/escribe_ciegas"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/indicator"
            android:backgroundTint="@color/white"
            android:layout_marginHorizontal="10dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/escribe_ciegas"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Escribe a ciegas"
                    android:fontFamily="@font/bangers_regular"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="300"
                        android:fontFamily="@font/bangers_regular"
                        android:textColor="@color/amarillo_oscuro"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mooncoin2"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- DESORDEN TOTAL -->
        <LinearLayout
            android:id="@+id/desorden_total"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/indicator"
            android:backgroundTint="@color/white"
            android:layout_margin="10dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:src="@drawable/desorden_total"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:weightSum="2">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Desorden total"
                    android:fontFamily="@font/bangers_regular"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="-10dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_marginRight="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="500"
                        android:fontFamily="@font/bangers_regular"
                        android:textColor="@color/amarillo_oscuro"
                        android:textSize="16dp"/>
                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/mooncoin2"
                        android:layout_gravity="center"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="3dp"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <!-- PERSONAS A ENVIAR -->
        <ListView
            android:id="@+id/listfriendsToSend"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginVertical="10dp"
            tools:listitem="@layout/row_punetas"
            android:visibility="gone"
            android:dividerHeight="8dp"/>
    </LinearLayout>
    <!-- Icono puneta -->
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dp"
        android:src="@drawable/punyetas"/>
    <!-- Buton open/close -->
    <Button
        android:id="@+id/buttonPunetas"
        android:layout_width="25dp"
        android:layout_height="30dp"
        android:backgroundTint="@color/verde_parrafo_seleccionado"
        android:fontFamily="@font/arial_regular"
        android:padding="2dp"
        android:src="@drawable/button_green"
        android:text="+"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainMenuActivity"
    android:background="@drawable/gradient_background">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints">
            <!---Parte superior-->
            <include layout="@layout/top"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="100dp"
                android:layout_marginHorizontal="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="8"
                    android:shadowDy="8"
                    android:shadowRadius="1"
                    android:text="@string/quick_game"
                    android:textColor="@color/white"
                    android:textSize="35sp" />
                <!---Boton Partida RÃ¡pida-->
                <Button
                    android:id="@+id/quick_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/create_room"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom|start"
                    android:textSize="35sp"
                    android:background="@drawable/button" />
                <!--Codigo -->
                <EditText
                    android:id="@+id/code"
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginTop="70dp"
                    android:background="@color/white"
                    android:fontFamily="@font/arial_regular"
                    android:hint="@string/code"
                    android:inputType="text"
                    android:paddingStart="12dp"
                    android:textSize="15sp"
                    tools:ignore="RtlSymmetry" />
                <!---Boton Unirse a sala-->
                <Button
                    android:id="@+id/join_room"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/join_room"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:gravity="bottom|start"
                    android:textSize="35sp"
                    android:background="@drawable/button" />
                <!---Boton Partida aleatoria-->
                <Button
                    android:id="@+id/random_game"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/random_game"
                    android:textColor="@color/white"
                    android:layout_marginTop="75dp"
                    android:gravity="bottom|start"
                    android:textSize="35sp"
                    android:background="@drawable/button" />
            </LinearLayout>
            <!---Parte inferior-->
            <include layout="@layout/bottom_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

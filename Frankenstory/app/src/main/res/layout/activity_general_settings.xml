<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:id="@+id/layoutmain">

            <!---Parte superior-->
            <include layout="@layout/top2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="70dp"
                android:layout_marginHorizontal="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="5"
                    android:shadowDy="5"
                    android:shadowRadius="1"
                    android:text="@string/settings"
                    android:textColor="@color/white"
                    android:textSize="35sp" />
                <!---Contraseña-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/arial_bold"
                android:paddingTop="10dp"
                android:shadowColor="@color/verde_letras"
                android:shadowDx="4"
                android:shadowDy="4"
                android:shadowRadius="1"
                android:text="Cambiar contraseña"
                android:textColor="@color/white"
                android:paddingRight="4dp"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/passwordRegister"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/arial_regular"
                android:hint="@string/insertPassWord"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="15sp" />

            <EditText
                android:id="@+id/secondpasswordRegister"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="6dp"
                android:background="@drawable/rounded_edittext"
                android:fontFamily="@font/arial_regular"
                android:hint="@string/insertPassWordAgain"
                android:inputType="textPassword"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:textSize="15sp" />
                <Button
                    android:id="@+id/change_pass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:paddingHorizontal="55sp"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/change_pass"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/buttom_change_password" />
                <!---Repita la Contraseña-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/arial_bold"
                    android:paddingTop="5dp"
                    android:shadowColor="@color/verde_letras"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="1"
                    android:text="Cambiar icono"
                    android:textColor="@color/white"
                    android:paddingRight="4dp"
                    android:textSize="18sp" />
                <!-- ICONS-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <ImageButton
                        android:id="@+id/icon0"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon0"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp"/>
                    <ImageButton
                        android:id="@+id/icon1"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon1"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp"/>
                    <ImageButton
                        android:id="@+id/icon2"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon2"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp" />
                    <ImageButton
                        android:id="@+id/icon3"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon3"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp" />
                    <ImageButton
                        android:id="@+id/icon4"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon4"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="5">
                    <ImageButton
                        android:id="@+id/icon5"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon5"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp"/>
                    <ImageButton
                        android:id="@+id/icon6"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon6"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp"/>
                    <ImageButton
                        android:id="@+id/icon7"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon7"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp" />
                    <ImageButton
                        android:id="@+id/icon8"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon8"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp" />
                    <ImageButton
                        android:id="@+id/icon9"
                        android:layout_height="50dp"
                        app:srcCompat="@raw/icon9"
                        android:scaleType="fitCenter"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:background="@drawable/circle"
                        android:backgroundTint="@null"
                        android:layout_gravity="fill"
                        android:padding="5dp" />
                </LinearLayout>
                <!-- BUTTON CAMBIAR ICONO -->
                <Button
                    android:id="@+id/change_icon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:paddingHorizontal="55sp"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/change_icon"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/buttom_change_icon"/>
                <Button
                    android:id="@+id/close_session"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:paddingHorizontal="55sp"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/close_session"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/buttom_close_session" />
                <Button
                    android:id="@+id/eliminate_acc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10sp"
                    android:paddingHorizontal="80sp"
                    android:fontFamily="@font/bangers_regular"
                    android:text="@string/elminate_acc"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:background="@drawable/buttom_eliminate_acc" />
            </LinearLayout>
            <!---Parte inferior-->
    <include
        layout="@layout/bottom_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <!-- ¿SEGURO DESEA BORRAR -->
    <LinearLayout
        android:id="@+id/messageDelete"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_marginHorizontal="40dp"
        android:background="@drawable/indicator"
        android:backgroundTint="@color/white">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="¿Seguro que deseas eliminar la cuenta?"
            android:fontFamily="@font/arial_bold"
            android:gravity="center"
            android:layout_marginTop="10dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="5dp"
            android:weightSum="2">
            <Button
                android:id="@+id/cancelDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/indicator"
                android:backgroundTint="@color/verde_top"
                android:layout_marginHorizontal="5dp"
                android:text="No, cancelar"
                android:textColor="@color/white"
                android:fontFamily="@font/arial_bold" />
            <Button
                android:id="@+id/keepDelete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/indicator"
                android:backgroundTint="@color/rojo"
                android:layout_marginHorizontal="5dp"
                android:text="Si, eliminar"
                android:textColor="@color/white"
                android:fontFamily="@font/arial_bold" />
        </LinearLayout>
    </LinearLayout>


</RelativeLayout>

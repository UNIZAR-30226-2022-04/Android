<animation-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:duration="4000">
        <shape>
            <gradient android:angle="90"
                android:startColor="@color/degradado_abajo"
                android:endColor="@color/degradado_arriba"
                android:type="linear" />
        </shape>
    </item>

    <item android:duration="4000">
        <shape>
            <gradient android:angle="90"
                android:startColor="@color/verde_top"
                android:endColor="@color/azul_claro"
                android:type="linear" />
        </shape>
    </item>

</animation-list>
